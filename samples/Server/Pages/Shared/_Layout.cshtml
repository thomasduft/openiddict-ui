@using tomware.Microip.Web

@inject ITitleService TitleService

<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - STS</title>
  <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body class="shell">
  <header class="header">
    <div class="header__logo">
      <a style="text-decoration: none;" href="/">@TitleService.Title</a>
    </div>
    <div class="header__login-info">
      <partial name="_LoginPartial" />
    </div>
  </header>

  <main class="content" role="main">
    @RenderBody()
  </main>

  <footer class="footer">
    <div class="footer__left">
      <p>by <a href="https://www.tomware.ch" target="_blank">tomware SOLUTIONS</a></p>
    </div>
    <div class="footer__right">
      <partial name="_LanguagePartial" />
    </div>
  </footer>
</body>

</html>